<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.phuongdong.bookstore">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_bookstore"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_bookstore"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddAuthorDialogActivity"
            android:theme="@style/Theme.AppCompat.Dialog" />
        <activity android:name=".ListBooksActivity" />
        <activity android:name=".AddBookDialogActivity"
            android:theme="@style/Theme.AppCompat.Dialog"></activity>
        <activity android:name=".EditAuthorDialogActivity"
            android:theme="@style/Theme.AppCompat.Dialog" />
        <activity android:name=".EditBookDialogActivity"
            android:theme="@style/Theme.AppCompat.Dialog" />
    </application>

</manifest>